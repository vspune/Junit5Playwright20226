pipeline {
    agent any
    
    tools {
        maven 'Maven-3.9'
        jdk 'JDK-11'
    }
    
    triggers {
        // ‚úÖ WHEN: Runs automatically when developer pushes code
        githubPush()
    }
    
    environment {
        TEST_SUITE = 'smoke'      // WHICH: Only smoke tests
        ENVIRONMENT = 'qa'         // WHERE: QA environment
        BROWSER = 'chromium'
        HEADLESS = 'true'
    }
    
    stages {

        stage('Checkout') {
        steps {
            echo "üì¶ Developer pushed code - Running smoke tests on QA..."
            checkout scm
            }
        }
       
        stage('Build') {
        steps { 
            bat 'mvn clean compile' 
            }
         }

        stage('Install Browsers') {  // ‚Üê ADD THIS
        steps {
            bat 'npx playwright install'
        }
        }
        
        stage('Install Playwright') {
            steps {
                bat 'mvn exec:java -e -D exec.mainClass=com.microsoft.playwright.CLI -D exec.args="install"'
            }
        }
        
        stage('Run Smoke Tests') {
            steps {
                echo "üî• Running: Smoke tests on QA environment"
                bat """
                    mvn clean verify \
                        -Dgroups=${env.TEST_SUITE} \
                        -Denv=${env.ENVIRONMENT} \
                        -Dbrowser=${env.BROWSER} \
                        -Dheadless=${env.HEADLESS}
                """
            }
        }
        
        stage('Allure Report') {
            steps {
                allure([results: [[path: 'target/allure-results']]])
            }
        }
    }
    
    post {
        success {
            echo "‚úÖ Smoke tests passed - PR can be merged"
        }
        failure {
            echo "‚ùå Smoke tests failed - PR is blocked"
        }
        always {
            cleanWs()
        }
    }
}