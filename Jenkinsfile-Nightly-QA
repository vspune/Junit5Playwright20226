pipeline {
    agent any
    
    tools {
        maven 'Maven-3.9'
        jdk 'JDK-11'
    }
    
    triggers {
        // âœ… WHEN: Every night at 2:00 AM
        cron('0 2 * * *')
    }
    
    environment {
        ENVIRONMENT = 'qa'         // WHERE: QA environment
        BROWSER = 'chromium'
        HEADLESS = 'true'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "ðŸŒ™ Starting nightly regression on QA..."
                checkout scm
            }
        }
        
        stage('Install Playwright') {
            steps {
                sh 'mvn exec:java -e -D exec.mainClass=com.microsoft.playwright.CLI -D exec.args="install"'
            }
        }
        
        stage('Run Full Regression') {
            steps {
                echo "ðŸ§ª Running: ALL tests on QA environment"
                sh """
                    mvn clean verify \
                        (no -Dgroups = runs ALL tests)
                        -Denv=${env.ENVIRONMENT} \
                        -Dbrowser=${env.BROWSER} \
                        -Dheadless=${env.HEADLESS}
                """
            }
        }
        
        stage('Allure Report') {
            steps {
                allure([results: [[path: 'target/allure-results']]])
            }
        }
    }
    
    post {
        always {
            // Send email to team with results
            emailext(
                subject: "Nightly QA Regression: ${currentBuild.result}",
                body: """
                    Build: ${env.BUILD_URL}
                    Status: ${currentBuild.result}
                    Allure Report: ${env.BUILD_URL}allure/
                """,
                to: 'team@example.com'
            )
            cleanWs()
        }
    }
}